# App
PORT=5000
FRONTEND_URL=https://www.daleelbalady.com

# JWT
JWT_SECRET=your_jwt_secret_key_here

# Database
DATABASE_URL="mysql://user:password@localhost:3306/daleelbalady"

# Google AI
GOOGLE_API_KEY=your_google_api_key_here

# Optional: Redis for session store
REDIS_URL=redis://localhost:6379

# ==========================================
# PAYMENT CONFIGURATION - PAYMOB INTEGRATION
# ==========================================

# Paymob API Credentials
PAYMOB_API_KEY="your-paymob-api-key-here"
PAYMOB_INTEGRATION_ID="your-paymob-integration-id"
PAYMOB_IFRAME_ID="your-paymob-iframe-id"

# Paymob Webhook Security
PAYMOB_WEBHOOK_SECRET="your-paymob-webhook-secret"

# Payment Environment (sandbox/production)
PAYMENT_ENVIRONMENT="sandbox"

# ==========================================
# EMAIL CONFIGURATION (Optional)
# ==========================================

# Email service for payment confirmations
EMAIL_SERVICE="gmail"
EMAIL_USER="your-email@gmail.com"
EMAIL_PASSWORD="your-app-password"

# ==========================================
# SUBSCRIPTION SETTINGS
# ==========================================

# Default currency
DEFAULT_CURRENCY="EGP"

# Maximum discount percentage
MAX_DISCOUNT_PERCENTAGE=50

# Trial period for user subscriptions (in days)
USER_TRIAL_PERIOD_DAYS=30

# Provider subscription grace period (in days)
PROVIDER_GRACE_PERIOD_DAYS=7
